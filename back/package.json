{
  "name": "api",
  "version": "1.0.0",
  "description": "A RESTful API",
  "main": "index.js",
  "jest": {
    "testMatch": [
      "**/__tests__/*.test.*",
      "!**/node_modules/**"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/index.js"
    ]
  },
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --watchAll=false",
    "lint": "eslint src",
    "start:production": "node src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Mintoo200/api.git"
  },
  "author": "Gauthier Fiorentino",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/Mintoo200/api/issues"
  },
  "homepage": "https://gitlab.com/Mintoo200/api#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "winston": "^3.2.1"
  }
}
