{
  "name": "Epitweet",
  "version": "1.0.0",
  "description": "The Epitweet API",
  "main": "index.js",
  "jest": {
    "testMatch": [
      "**/__tests__/*.test.*",
      "!**/node_modules/**"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/index.js"
    ]
  },
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --watchAll=false",
    "lint": "eslint src",
    "start:production": "node src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsAnas/infra-aws.git"
  },
  "author": "Gauthier Fiorentino",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ItsAnas/infra-aws/issues"
  },
  "homepage": "https://github.com/ItsAnas/infra-aws/blob/main/client/README.md",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.6",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.14",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.2.1"
  }
}
